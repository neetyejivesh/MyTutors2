<div class="container">
  <h1>Our <span>course</span> list</h1>
    <h4>Take a look at our best courses:</h4>
    
<div class="btn"> 
<%= link_to  "create your course", new_course_path %>
</div>

  <div class="d-flex row justify-content-center">
    <% @courses.each do |course| %>
      <div class="col-lg-4">
        <div class="card bg-light my-3">
          <%= image_tag(course.photo_url, height: 300) %>
          <div class="card-body d-flex align-items-center">
            <div class="">
              <h3 class="card-title fw-bolder"> <%= course.title %> </h3>
            </div>
          </div>
          <div class="card-body">
            <%= link_to "Learn more",  course_path(course), class: "btn btn-booknow card-link"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
