<h1>my booking list</h1>
<div class="d-flex row justify-content-center flex-wrap">
  <% @bookings.each do |booking| %>
    <% if (booking.user_id == current_user.id) %>
      <div class="col-lg-2 h-5 justify-content-center m-2">
        <div class="card bg-light">
          <div class="card-body">
            <img class="card-img-top" src="<%= booking.course.photo_url %>" alt="Card image cap">
            <h5 class="card-title"><%= booking.course.title %> </h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item booklist"> Location: <%= booking.course.title %></li>
            <li class="list-group-item booklist"> schedule date: <%= booking.start_date %></li>
            <li class="list-group-item booklist"> schedule date: <%= booking.end_date %></li>
          </ul>
          <%= link_to "Delete #{booking.course.title}",
          booking_path(booking),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="d-flex justify-content-center">
  <div class="justify-content-center">
    <%= link_to "Back To course List",  courses_path, class: "btn btn-primary"%>
    <%= link_to "Home",  root_path, class: "btn btn-primary"%>
  </div>
</div>


